package  {	import flash.display.Sprite;	import flash.net.XMLSocket;	import flash.events.DataEvent;		public class Ping extends Sprite	{		public static const DISTANCE:Number = 120;		public static const MAXIMUM:Number = 36;		public static const MINIMUM:Number = 1;		public static const MULTIPLIER:Number = 75;		public static const PORT:Number = 5331;		public static const LOCALHOST:String = "127.0.0.1";				private var socket:XMLSocket = null;				public function Ping() 		{			super();			init();		}				private function init():void		{			socket = new XMLSocket();			socket.addEventListener( DataEvent.DATA, doSocketData );			socket.connect( LOCALHOST, PORT );		}				protected function doSocketData( event:DataEvent ):void		{			var depth:Number = new Number( event.data.toString() );						cat.z = ( ( depth / DISTANCE ) * MAXIMUM ) * MULTIPLIER;		}	}}