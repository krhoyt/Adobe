package  {		import flash.display.Sprite;	import flash.net.XMLSocket;	import flash.events.DataEvent;	import gs.TweenLite;	public class Accel extends Sprite	{		public static const MAXIMUM:Number = 480;		public static const PORT:Number = 5331;		public static const COMMA:String = ",";		public static const LOCALHOST:String = "127.0.0.1";				private var socket:XMLSocket = null;				public function Accel() 		{			super();			init();		}				private function init():void		{			socket = new XMLSocket();			socket.addEventListener( DataEvent.DATA, doSocketData );			socket.connect( LOCALHOST, PORT );		}				protected function doSocketData( event:DataEvent ):void		{			var values:Array = null;			var tiltX:Number = 0;			var tiltY:Number = 0;			var line:String = event.data.toString();						values = line.split( COMMA );						tiltX = new Number( values[1] );			tiltY = new Number( values[0] );									TweenLite.to( cat, 0.2, {				rotationX: ( tiltX / MAXIMUM ) * 90,				rotationY: ( tiltY / MAXIMUM ) * 90			} );		}	}}