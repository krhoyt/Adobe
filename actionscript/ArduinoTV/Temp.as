package  {	import flash.display.Sprite;	import flash.net.XMLSocket;	import flash.events.DataEvent;		import gs.TweenLite;		public class Temp extends Sprite	{		public static const COLD:Number = 35;		public static const HOT:Number = -1075;				public static const MEDIUM:Number = -525;		public static const PORT:Number = 5331;		public static const COMMA:String = ",";		public static const LOCALHOST:String = "127.0.0.1";				private var socket:XMLSocket = null;				public function Temp() 		{			super();			init();		}				private function init():void		{			socket = new XMLSocket();			socket.addEventListener( DataEvent.DATA, doSocketData );			socket.connect( LOCALHOST, PORT );		}				protected function doSocketData( event:DataEvent ):void		{			var parts:Array = null;			var humid:Number = 0;			var temp:Number = 0;			var values:String = event.data.toString();			 			parts = values.split( COMMA );			temp = new Number( parts[0] );			humid = new Number( parts[1] );						trace( temp.toString() );						if( temp >= 0 && temp < 50 )			{				TweenLite.to( range, 0.80, {					x: COLD 				} );			} else if( temp >= 50 && temp < 77 ) {				TweenLite.to( range, 0.80, {					x: MEDIUM 				} );							} else {				TweenLite.to( range, 0.80, {					x: HOT 				} );											}		}	}}