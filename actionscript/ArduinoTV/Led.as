package  {		import flash.display.Sprite;	import flash.net.Socket;	import flash.events.ProgressEvent;	import flash.events.Event;	import flash.events.MouseEvent;	public class Led extends Sprite	{		public static const PORT:Number = 5331;		public static const LOCALHOST:String = "127.0.0.1";				private var socket:Socket = null;				public function Led() 		{			super();			init();		}				private function init():void		{			socket = new Socket();			socket.addEventListener( Event.CONNECT, doSocketConnect );			socket.addEventListener( Event.CLOSE, doSocketClose );			socket.connect( LOCALHOST, PORT );		}				protected function doArcadeDown( event:MouseEvent ):void		{			socket.writeInt( 1 );		}				protected function doArcadeUp( event:MouseEvent ):void		{			socket.writeInt( 0 );		}		protected function doSocketClose( event:Event ):void		{			btnarcade.removeEventListener( MouseEvent.MOUSE_DOWN, doArcadeDown );			btnarcade.removeEventListener( MouseEvent.MOUSE_UP, doArcadeUp );		}		protected function doSocketConnect( event:Event ):void		{			btnarcade.addEventListener( MouseEvent.MOUSE_DOWN, doArcadeDown );			btnarcade.addEventListener( MouseEvent.MOUSE_UP, doArcadeUp );		}	}}