package  {	import flash.display.Sprite;	import flash.net.XMLSocket;	import flash.events.DataEvent;		public class Pir extends Sprite	{		public static const PORT:Number = 5331;		public static const LOCALHOST:String = "127.0.0.1";		private var socket:XMLSocket = null;		public function Pir() 		{			super();			init();		}				private function init():void		{			dog.visible = false;						socket = new XMLSocket();			socket.addEventListener( DataEvent.DATA, doSocketData );			socket.connect( LOCALHOST, PORT );		}				private function doSocketData( event:DataEvent ):void		{			var active:Number = new Number( event.data.toString() );						if( active == 0 )			{				dog.visible = false;			} else {				dog.visible = true;			}		}	}}