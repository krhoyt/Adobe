package  {		import flash.display.Sprite;	import flash.net.XMLSocket;	import flash.events.DataEvent;	public class Photocell extends Sprite	{		public static const MAXIMUM:Number = 1000;		public static const MINIMUM:Number = 0;		public static const PORT:Number = 5331;		public static const LOCALHOST:String = "127.0.0.1";				private var socket:XMLSocket = null;				public function Photocell() 		{			super();			init();		}				private function init():void		{			shine.alpha = 0;						socket = new XMLSocket();			socket.addEventListener( DataEvent.DATA, doSocketData );			socket.connect( LOCALHOST, PORT );		}				protected function doSocketData( event:DataEvent ):void		{			var intensity:Number = new Number( event.data.toString() );						shine.alpha = intensity / MAXIMUM;		}	}}