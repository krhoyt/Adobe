package  {		import flash.display.Sprite;	import com.bit101.components.ColorChooser;	import flash.events.Event;	import flash.net.Socket;	public class Rgb extends Sprite	{		public static const PORT:Number = 5331;		public static const LOCALHOST:String = "127.0.0.1";				private var color:ColorChooser = null;		private var socket:Socket = null;				public function Rgb() 		{			super();			init();		}				private function init():void		{			color = new ColorChooser( null, 240, 190, 0xFF0000, doColorChange );			color.usePopup = true;			color.visible = false;			addChild( color );						socket = new Socket();			socket.addEventListener( Event.CONNECT, doSocketConnect );			socket.addEventListener( Event.CLOSE, doSocketClose );			socket.connect( LOCALHOST, PORT );		}				protected function doColorChange( event:Event ):void		{			var red:Number = ( color.value >>> 16 ) & 0xFF;			var green:Number = ( color.value >>> 8 ) & 0xFF;			var blue:Number = ( color.value >>> 0 ) & 0xFF;									socket.writeByte( red );			socket.writeByte( green );			socket.writeByte( blue );		}				protected function doSocketClose( event:Event ):void		{			color.visible = false;		}				protected function doSocketConnect( event:Event ):void		{			color.visible = true;		}	}}